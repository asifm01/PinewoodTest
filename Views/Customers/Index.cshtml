@model IEnumerable<WebApplication3.Models.Customer>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer List</title>
</head>
<body>
    <h4>Customer List</h4>

    <p>
        <a asp-action="Create" href="/Customers/Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" href="/Customers/Edit/@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" href="/Customers/Details/@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" href="/Customers/Delete/@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
